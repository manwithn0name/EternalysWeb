@model List<Eternalys.BLL.Dal.AssignmentDto>
@{
    ViewBag.Title = "Маршрути";
}

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
<section class="ftco-section">
    <div class="container">

        <hr />
        <h2 style="text-align:center;color:blue;font-family:'Palatino Linotype';font-weight:bold">
            <span style="background-image: linear-gradient(black, black, darkgray); color: white; padding: 12px">
                Asignment Table
            </span>
        </h2>
        <hr />

        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap" style="overflow: auto; width: 100%">
                    @using (Html.BeginForm())
                    {
                        <table class="table table-dark table-bordered table-hover">
                            <thead>
                                <tr class="bg-light">
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Tasks</th>
                                    <th>Start Date</th>
                                    <th>Dead Line</th>
                                    <th>Mark</th>
                                    <th>User ID</th>
                                    <th>Achievement</th>
                                    <th>Is Done?</th>
                                    <th>Is Cancel?</th>
                                    <th>Attachment</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="bg-primary">
                                        <td scope="row">@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.Task</td>
                                        <td>@item.StartDate</td>
                                        <td>@item.DeadLine</td>
                                        <td>@item.Mark</td>
                                        <td>@item.UserId</td>
                                        <td>@item.Achievement</td>
                                        <td>@item.IsDone</td>
                                        <td>@item.IsCancel</td>
                                        <td>@item.Attachment</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Tooltip container */
    .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black; /* If you want dots under the hoverable text */
    }

        /* Tooltip text */
        .tooltip .tooltiptext {
            visibility: hidden;
            width: 120px;
            background-color: black;
            color: #fff;
            text-align: center;
            padding: 5px 0;
            border-radius: 6px;
            /* Position the tooltip text - see examples below! */
            position: absolute;
            z-index: 1;
        }

        /* Show the tooltip text when you mouse over the tooltip container */
        .tooltip:hover .tooltiptext {
            visibility: visible;
        }
</style>

